{
	"name": "cloudly-hook",
	"version": "0.0.2",
	"description": "Library to handle webhooks in Cloudflare Workers.",
	"author": "Utily Contributors",
	"license": "MIT",
	"repository": "https://github.com/utily/cloudly-hook",
	"bugs": {
		"url": "https://github.com/utily/cloudly-hook/issues"
	},
	"homepage": "https://github.com/utily",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|cloudly-http|cloudly-router|cloudly-storage)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/",
			"test-worker/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"lint": "eslint --max-warnings=0 '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"preinstall": "cd test-worker/ && npm install && cd ..",
		"build": "tsc -p .",
		"jest": "jest",
		"test": "cd test-worker/ && npm run test && cd .. && jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage",
		"start": "npm --prefix test-worker run start"
	},
	"devDependencies": {
		"@types/jest": "^29.2.0",
		"@typescript-eslint/eslint-plugin": "5.40.1",
		"@typescript-eslint/parser": "5.40.1",
		"eslint": "^8.25.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20220323",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"jest": "^29.2.1",
		"prettierx": "github:utily/prettierx#utily-20220323",
		"rimraf": "^3.0.2",
		"ts-jest": "^29.0.3",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"cloudly-http": "^0.0.52",
		"cloudly-router": "^0.0.25",
		"cloudly-storage": "^0.4.4",
		"cryptly": "^3.0.2",
		"gracely": "^2.0.3",
		"isoly": "^2.0.13"
	}
}
